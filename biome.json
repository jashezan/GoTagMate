{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"assists": {
		"actions": {
			"source": {
				"sortJsxProps": "on",
				"useSortedKeys": "on"
			}
		},
		"enabled": true,
		"ignore": ["node_modules/**", "out/**", "dist/**"]
	},
	"css": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			"out/**",
			"*.postman_collection.json"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"attributePosition": "auto",
		"bracketSpacing": true,
		"enabled": true,
		"ignore": ["node_modules/**", "out/**", "dist/**"],
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"attributePosition": "auto",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"enabled": true,
			"indentWidth": 4,
			"jsxQuoteStyle": "double",
			"lineWidth": 80,
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"enabled": true,
		"ignore": ["node_modules/**", "out/**", "dist/**"],
		"rules": {
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off"
			},
			"recommended": true,
			"security": {
				"noGlobalEval": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "off",
				"useConst": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true,
		"ignore": ["node_modules/**", "out/**", "dist/**"]
	},
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"root": ".",
		"useIgnoreFile": false
	}
}
